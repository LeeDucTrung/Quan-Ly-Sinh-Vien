<div class="modal" id="modal-form">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:cornflowerblue">
                <h5 class="modal-title w-100 text-center" style="font-weight:bold;color:white"></h5>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer" style="background-color:azure">
                <button type="button" class="btn btn-primary" id="btnSave"><i class="fa fa-floppy-o" aria-hidden="true"></i>Lưu</button>
                <button type="button" class="btn btn-danger pull-left" id="btnClose"><i class="fa fa-sign-out" aria-hidden="true"></i>Thoát</button>

            </div>

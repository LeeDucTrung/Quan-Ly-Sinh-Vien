@{
    ViewData["Title"] = "Danh sách sinh viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header text-center border-0">
                <div class="row align-items-center my-auto" id="frmFilter">
                    <div class="col-lg-2">
                        <div class="form-group">
                            <input id="txtName" type="text" class="form-control" placeholder="Tìm kiếm theo tên sinh viên">
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <div class="form-group">
                            <input id="txtCode" type="text" class="form-control" placeholder="Mã sinh viên">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group" style="float:left">
                            <button id="btnSearch" class="btn btn btn-primary btn-sm"><i class="fas fa-search mr-2"></i>Tìm kiếm</button>
                            <button id="btnCreate" class="btn btn btn-success btn-sm"><i class="fas fa-plus mr-2"></i>Thêm mới</button>
                            <button id="btnXoaNhieu" class="btn btn btn-danger btn-sm"><i class="fas fa-times mr-2"></i>Xóa nhiều</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div id="dtTable">
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
<script>
    showContentModal("sa","sad");
</script>

